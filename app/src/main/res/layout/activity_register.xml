<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:contentDescription="@string/app_name">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".RegisterActivity">


        <Button
            android:id="@+id/addCard"
            android:layout_width="282dp"
            android:layout_height="50dp"
            android:backgroundTint="#184A2C"
            android:fontFamily="@font/poppins"
            android:text="Continuă"
            android:textAllCaps="false"
            android:textSize="13sp"
            app:cornerRadius="6sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addUser" />

        <Button
            android:id="@+id/addUser"
            android:layout_width="282dp"
            android:layout_height="50dp"
            android:layout_marginTop="31dp"
            android:backgroundTint="#184A2C"
            android:fontFamily="@font/poppins"
            android:onClick="inregistrare"
            android:text="Înregistrare"
            android:textAllCaps="false"
            android:textSize="13sp"
            app:cornerRadius="6sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextParola" />

        <EditText
            android:id="@+id/editTextParola"
            android:layout_width="282dp"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:paddingLeft="5dp"
            android:inputType="textPassword"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView107" />

        <TextView
            android:id="@+id/textView107"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:fontFamily="@font/poppins"
            android:text="Parola"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/editTextParola"
            app:layout_constraintTop_toBottomOf="@+id/editTextTelefon" />

        <TextView
            android:id="@+id/textView106"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:fontFamily="@font/poppins"
            android:text="Telefon"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/editTextTelefon"
            app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />

        <EditText
            android:id="@+id/editTextTelefon"
            android:layout_width="282dp"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:paddingLeft="5dp"
            android:inputType="phone"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView106" />

        <EditText
            android:id="@+id/editTextPrenume"
            android:layout_width="282dp"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:paddingLeft="5dp"
            android:inputType="text"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView105" />

        <TextView
            android:id="@+id/textView105"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:fontFamily="@font/poppins"
            android:text="Prenume"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/editTextPrenume"
            app:layout_constraintTop_toBottomOf="@+id/editTextName" />

        <TextView
            android:id="@+id/textView104"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:fontFamily="@font/poppins"
            android:text="Email"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/editTextEmail"
            app:layout_constraintTop_toBottomOf="@+id/editTextPrenume" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="282dp"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:paddingLeft="5dp"
            android:inputType="textEmailAddress"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView104" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="282dp"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:paddingLeft="5dp"
            android:inputType="textPersonName"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView103" />

        <TextView
            android:id="@+id/textView103"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins"
            android:text="Nume"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/editTextName"
            app:layout_constraintTop_toBottomOf="@+id/textView102" />

        <TextView
            android:id="@+id/textView102"
            android:layout_width="268dp"
            android:layout_height="48dp"
            android:layout_marginTop="31dp"
            android:text="Pentru a putea folosi aplicația EcoGo este necesar să-ți creezi un cont."
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.567"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView93" />

        <TextView
            android:id="@+id/textView93"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Înregistrare"
            android:textColor="#184A2C"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/errorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#FF3030"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/editTextName"
            app:layout_constraintTop_toBottomOf="@+id/editTextName" />

        <TextView
            android:id="@+id/errorFName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#FF3030"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/editTextPrenume"
            app:layout_constraintTop_toBottomOf="@+id/editTextPrenume" />

        <TextView
            android:id="@+id/errorEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#FF3030"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/editTextEmail"
            app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />

        <TextView
            android:id="@+id/errorPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#FF3030"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/editTextTelefon"
            app:layout_constraintTop_toBottomOf="@+id/editTextTelefon" />

        <TextView
            android:id="@+id/errorPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#FF3030"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/editTextParola"
            app:layout_constraintTop_toBottomOf="@+id/editTextParola" />

        <TextView
            android:id="@+id/errorUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF3030"
            android:textSize="10sp"
            tools:layout_editor_absoluteX="65dp"
            tools:layout_editor_absoluteY="748dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>