<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/cont_item"
        android:layout_width="331dp"
        android:layout_height="57dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#FFFFFF"
        android:elevation="0dp"
        android:fontFamily="@font/poppins"
        android:text="Cont"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#7E7A7A"
        android:textSize="18sp"
        app:icon="@drawable/ic_baseline_account_circle_24"
        app:iconSize="30dp"
        app:iconTint="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/card_item"
        android:layout_width="331dp"
        android:layout_height="57dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#FFFFFF"
        android:elevation="0dp"
        android:fontFamily="@font/poppins"
        android:text="Card"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#FF7E7A7A"
        android:textSize="18sp"
        app:icon="@drawable/ic_baseline_credit_card_24"
        app:iconSize="30dp"
        app:iconTint="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cont_item" />

</androidx.constraintlayout.widget.ConstraintLayout>